<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#388E3C</item>
        <item name="colorPrimaryDark">#388E3C</item>
        <item name="colorAccent">#388E3C</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorSecondary">#388E3C</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="popupOverlayStyle">@style/AppTheme.PopupOverlay</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorPrimary">#37474F</item>
        <item name="colorPrimaryDark">#37474F</item>
        <item name="colorAccent">#388E3C</item>
        <item name="android:textColorSecondary">#388E3C</item>
        <item name="android:textColor">#CFD8DC</item>
        <item name="android:textColorLink">#388E3C</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="popupOverlayStyle">@style/AppTheme.PopupOverlay.Dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#388E3C</item>
        <item name="colorControlActivated">#388E3C</item>
    </style>

</resources>
